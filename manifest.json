{
  "manifest_version": 3,
  "name": "Site Tracker Extension",
  "version": "1.0",
  "description": "Tracks time spent on each website and counts unique sites visited in a session.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
